{
  "name": "week-planner",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:css && tsc",
    "build:css": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch=false",
    "build:test": "tsc -p tsconfig.test.json",
    "watch": "npm run build:css && tsc --watch",
    "watch:css": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "serve": "http-server -p 8088 .",
    "dev": "npm run build && npm run serve",
    "test": "npm run build:test && node --test tests-dist/tests/**/*.test.js",
    "test:watch": "npm run build:test && node --test --watch tests/**/*.test.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "author": "SÃ©bastien Dubois",
  "license": "MIT",
  "description": "A week planner application with Canvas and TypeScript",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.12",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.57.0",
    "http-server": "^14.1.1",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.0.0"
  }
}
